{
  "name": "saw-monorepo",
  "version": "0.2.1",
  "private": true,
  "description": "SAW monorepo (single package) containing library & CLI for signed structured content feeds, diffs, and canary detection.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vncsleal/saw.git"
  },
  "bugs": {
    "url": "https://github.com/vncsleal/saw/issues"
  },
  "homepage": "https://github.com/vncsleal/saw#readme",
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "rm -rf packages/cli/dist && tsc -b packages/cli --force",
    "test": "vitest run --reporter basic",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "dev:cli": "npm run build --silent && node packages/cli/dist/index.js",
    "bench:feed": "node scripts/benchmark-feed.mjs",
    "coverage:enforce": "node scripts/enforce-coverage.mjs"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
  "@typescript-eslint/parser": "^7.7.0",
  "@typescript-eslint/eslint-plugin": "^7.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0",
  "@vitest/coverage-v8": "^1.5.0",
    "zod": "^3.23.0",
    "tweetnacl": "^1.0.3"
  },
  "packageManager": "npm@10.0.0"
}
