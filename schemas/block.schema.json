{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/saw/block.schema.json",
  "title": "SAW Block",
  "type": "object",
  "required": ["id", "type", "title", "content", "version", "updated_at"],
  "additionalProperties": false,
  "properties": {
    "id": {"type": "string", "pattern": "^block:[A-Za-z0-9_.-]+"},
    "type": {"type": "string", "minLength": 1},
    "title": {"type": "string", "minLength": 1},
    "summary": {"type": "string"},
    "content": {"type": "string"},
    "structured": {"type": ["object", "null"]},
    "tags": {"type": "array", "items": {"type": "string"}},
    "relations": {"type": "array", "items": {"type": "object", "required": ["type", "target"], "properties": {"type": {"type": "string"}, "target": {"type": "string"}}, "additionalProperties": false}},
    "version": {"type": "string"},
    "published_at": {"type": "string", "format": "date-time"},
    "updated_at": {"type": "string", "format": "date-time"},
    "canonical_url": {"type": "string", "format": "uri"},
    "provenance": {"type": "object", "properties": {"authorId": {"type": "string"}, "commitId": {"type": "string"}}, "additionalProperties": false},
    "discoverability": {"type": "object", "properties": {"public": {"type": "boolean"}, "include_in_llms_txt": {"type": "boolean"}}, "additionalProperties": false},
    "block_hash": {"type": "string", "pattern": "^[a-f0-9]{8,64}$"},
    "canary": {"type": "string"}
  }
}
