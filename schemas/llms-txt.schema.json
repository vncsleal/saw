{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/saw/llms-txt.schema.json",
  "title": "SAW llms.txt lines",
  "type": "object",
  "description": "Normalized representation of llms.txt for validation tooling (each directive becomes a property).",
  "required": ["SAW-Version", "AI-Feed-URL", "Public-Key", "Updated-At"],
  "additionalProperties": true,
  "properties": {
    "SAW-Version": {"type": "string", "pattern": "^[0-9]+\\.[0-9]+"},
    "AI-Feed-URL": {"type": "string", "format": "uri"},
    "Public-Key": {"type": "string", "pattern": "^ed25519:[a-f0-9]{8}$"},
    "Updated-At": {"type": "string", "format": "date-time"}
  }
}
